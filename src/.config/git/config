; vim: ft=gitconfig

[gpg]
	program = /usr/local/bin/gpg

[color]
	ui = auto
	interactive = auto

[credential]
	helper = osxkeychain

[hub]
	protocol = git

[merge]
	ff = only

[diff]
	tool = mvimdiff

[commit]
	gpgsign = true
	template = ~/.git.d/template

[push]
	default = current

[tag]
	forceSignAnnotated = true

[rebase]
	autosquash = true

[core]
	commitGraph = true
	autocrlf = input
	editor = $EDITOR

[fetch]
	prune = true

[mergetool]
	keepBackup = false

[include]
	path = ~/.git.d/config.local
