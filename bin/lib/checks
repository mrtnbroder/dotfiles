#!/usr/bin/env zsh

check_required_commands() {
  e_info "Checking for XCode, Homebrew and Git..."

  # - XCODE
  if ! command_exists gcc; then
    e_error "The XCode Command Line Tools must be installed.${NC}\n  Download: https://developer.apple.com/downloads/\n  Then run this again."
  fi

  # - HOMEBREW
  if ! command_exists brew; then
    e_info "Installing Homebrew..."

    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi

  # - GIT
  if ! command_exists git; then
    e_info "Installing Git..."

    brew update
    brew install git
  fi

  e_done "Done"
}
