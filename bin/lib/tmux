#!/usr/bin/env zsh

update_tmux() {
  # e_info "Installing: tmux..."

  if [ ! -d ~/.tmux ]; then
    mkdir -p ~/.tmux
  fi

  ln -fs $DOTFILES_PATH/tmux.conf ~/.tmux.conf
  ln -fs $DOTFILES_PATH/tmux/plugins.tmux ~/.tmux/plugins.tmux
  # ln -fs $DOTFILES_PATH/tmux/status-bar.tmux ~/.tmux/status-bar.tmux

  # [ $? ] && e_done "Done"
}
