#!/usr/bin/env zsh

link_npm() {
  ln -fs $DOTFILES_PATH/npmrc ~/.npmrc
}

update_yarn() {
  link_npm

  # Update NPM packages
  e_info "Updating NPM packages..."
  yarn global upgrade
  [ $? ] && e_done

  # Install NPM packages stuff
  e_info "Installing NPM packages..."
  cat $DOTFILES_PATH/Npmfile | grep -v '^#' | xargs yarn global add # &> /dev/null
  [ $? ] && e_done
}
