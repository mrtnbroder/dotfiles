#!/usr/bin/env zsh

link_fish() {
  if [ ! -d ~/.config/fish/functions ]; then
    mkdir -p ~/.config/fish/functions
  fi

  # fish config
  ln -fs $DOTFILES_PATH/config/fish/config.fish ~/.config/fish/config.fish

  # fisher
  ln -fs $DOTFILES_PATH/config/fish/fishfile ~/.config/fish/fishfile
}

update_fish() {
  e_info "Linking fishshell stuff..."

  link_fish

  [ $? ] && e_done "Done"
}
