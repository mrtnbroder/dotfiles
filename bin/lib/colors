#!/usr/bin/env zsh

# Colors

export Black="$(tput setaf 0)"
export BlackBG="$(tput setab 0)"
export DarkGrey="$(tput setaf 0)"
export LightGrey="$(tput setaf 7)"
export LightGreyBG="$(tput setab 7)"
export White="$(tput setaf 7)"
export Red="$(tput setaf 1)"
export RedBG="$(tput setab 1)"
export LightRed="$(tput setaf 1)"
export Green="$(tput setaf 2)"
export GreenBG="$(tput setab 2)"
export LightGreen="$(tput setaf 2)"
export Brown="$(tput setaf 3)"
export BrownBG="$(tput setab 3)"
export Yellow="$(tput setaf 3)"
export Blue="$(tput setaf 4)"
export BlueBG="$(tput setab 4)"
export LightBlue="$(tput setaf 4)"
export Purple="$(tput setaf 5)"
export PurpleBG="$(tput setab 5)"
export Pink="$(tput setaf 5)"
export Cyan="$(tput setaf 6)"
export CyanBG="$(tput setab 6)"
export LightCyan="$(tput setaf 6)"
export NC="$(tput sgr0)" # No Color
