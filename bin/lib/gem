#!/usr/bin/env zsh

function link_gem {
  ln -fs $DOTFILES_PATH/gemrc ~/.gemrc
}

function update_gem {
  link_gem

  # Update Gems
  e_info "Updating Gems..."
  gem update --system
  [ $? ] && e_done

  # Install Gems stuff
  e_info "Installing Gems..."
  cat $DOTFILES_PATH/Gemfile | grep -v '^#' | xargs gem install # &> /dev/null
  [ $? ] && e_done

  # Cleanup
  e_info "Cleaning up Gems..."
  gem cleanup
  [ $? ] && e_done
}
