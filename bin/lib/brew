#!/usr/bin/env zsh

update_brew() {
  # Update Homebrew
  e_info "Updating Homebrew..."
  brew update
  [ $? ] && e_done

  # Upgrade Homebrew
  e_info "Upgrading Homebrew..."
  brew upgrade
  [ $? ] && e_done

  # Install Homebrew stuff
  e_info "Installing Homebrew stuff..."
  cat $DOTFILES_PATH/Brewfile | grep -v '^#' | xargs brew install # &> /dev/null
  [ $? ] && e_done

  # Cleanup
  e_info "Cleaning up Homebrew..."
  brew cleanup
  [ $? ] && e_done
}
